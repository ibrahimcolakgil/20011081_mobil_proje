<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileListClicked">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="28dp"
            android:text="E-mail"/>

        <TextView
            android:id="@+id/phone_number_tv"
            android:layout_below="@id/email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="28dp"
            android:text="Phone Number"/>

        <TextView
            android:id="@+id/time_tv"
            android:layout_below="@id/phone_number_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="28dp"
            android:text="Share Time"/>

        <TextView
            android:id="@+id/distance_tv"
            android:layout_below="@id/time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="28dp"
            android:text="Distance to Campus"/>

        <com.google.android.material.button.MaterialButton
            android:id="@id/match_btn"
            android:layout_below="@id/distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Send Match Request"
            android:layout_marginTop="56dp"/>



    </RelativeLayout>

</RelativeLayout>