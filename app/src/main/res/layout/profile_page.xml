<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:padding="2dp"
    >

    <TextView
        android:id="@+id/profile_header_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="26dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:background="@color/purple_200"
        android:layout_below="@+id/profile_header_txt"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_header_txt"
        android:layout_toRightOf="@id/image_iv"
        android:hint="E-mail"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_et"
        android:layout_toRightOf="@id/image_iv"
        android:hint="Password"
        />

    <EditText
        android:id="@+id/department_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_iv"
        android:hint="Department"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/grade_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/department_et"
        android:hint="Grade"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/status_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grade_et"
        android:hint="Status"
        />

    <EditText
        android:id="@+id/distance_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_et"
        android:hint="Preferred Distance From Campus"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/shared_time_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/distance_et"
        android:hint="Shared Time in House"
        />

    <EditText
        android:id="@+id/phone_num_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shared_time_et"
        android:hint="Phone Number"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_num_et"
        android:text="Save"
        android:backgroundTint="@color/teal_200"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:id="@+id/nav_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/match_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Match"
            android:layout_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/map_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Map"
            android:layout_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile_list_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Profile List"
            android:layout_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Profile"
            android:layout_weight="1"
            />
    </LinearLayout>


</RelativeLayout>